<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#e9e9e9" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="请选择省市区" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <com.example.legend.wheel.WheelView
            android:id="@+id/wheel_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
        <com.example.legend.wheel.WheelView
            android:id="@+id/wheel_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
        <com.example.legend.wheel.WheelView
            android:background="@android:color/white"
            android:id="@+id/wheel_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
    </LinearLayout>

    <EditText android:id="@+id/tv_detail_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_place"
        android:ems="10"/>

    <Button
        android:id="@+id/btn_confirm"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="确定" />

</LinearLayout>