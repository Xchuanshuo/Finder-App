<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/mCardView">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_class_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/class_number"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_total_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/total_hours"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_course_name"
            android:text="@string/course_name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_playlist_add_black_24dp"
            android:layout_below="@+id/tv_class_number"
            android:maxLines="2"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_classroom_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:paddingTop="@dimen/dp_10"
            android:maxLines="2"
            android:text="@string/classroom"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_classroom"
            android:layout_width="200dp"
            android:layout_toRightOf="@+id/tv_classroom_placeholder"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:paddingTop="@dimen/dp_10"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/course_teacher"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>
</android.support.v7.widget.CardView>