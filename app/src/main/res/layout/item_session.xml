<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay_session"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/len_2"
        android:layout_marginTop="@dimen/len_2"
        android:foreground="@drawable/ic_touch_fg"
        android:padding="@dimen/dp_16">

        <com.legend.liteim.common.widget.CircleImageView
            android:id="@+id/im_portrait"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/g" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/len_60"
            android:layout_marginStart="@dimen/len_52"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/fontNameSize"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_52"
            android:layout_marginTop="@dimen/len_24"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLength="32"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/font_12"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="end"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLength="32"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/font_12"
            tools:text="17-04-12" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_4" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg" />
</LinearLayout>