<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/mSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <q.rorbin.verticaltablayout.VerticalTabLayout
                    android:id="@+id/more_info_tab_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/deep_grey"
                    app:indicator_color="@color/light_blue"
                    app:indicator_gravity="left"
                    app:tab_height="@dimen/dp_50"
                    app:tab_margin="@dimen/dp_15"
                    app:tab_mode="scrollable" />


                <View
                    android:id="@+id/navigation_divider"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/comment_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
