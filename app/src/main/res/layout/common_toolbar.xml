<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    style="@style/action_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <com.worldtreestd.finder.common.widget.CircleImageView
        android:id="@+id/portrait"
        android:src="@drawable/g"
        android:foreground="@drawable/ic_touch_menu"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48" />
    <TextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16"
        tools:text="开发环境" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mSearch_button"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="@dimen/dp_10"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mWrite_Button"
        android:src="@drawable/ic_write_24dp"
        android:layout_width="30dp"
        android:visibility="invisible"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="@dimen/dp_10"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/mSpinner"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:theme="@style/common_spinner"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_height="wrap_content">

    </android.support.v7.widget.AppCompatSpinner>

</android.support.v7.widget.Toolbar>